{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": [
      "es5",
      "es6",
      "DOM"
    ],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*"
  ],
}